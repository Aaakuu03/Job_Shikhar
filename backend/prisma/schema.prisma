generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id       Int        @id @default(autoincrement())
  name     String?
  email    String     @unique
  phoneNumber   String  @unique
  password String
  userType Role       @default(JOBSEEKER)
  employer Employer[]
  jobSeeker  Job_Seeker[]
}

model Job_Seeker {
  id                      Int           @id @default(autoincrement())
  userId                  Int           @unique
  name                    String
  dob                     String?
  gender                  String?
  user                    User          @relation(fields: [userId], references: [id])
  aboutYourself           String?
  address                 String?
  preferredJobLocation    String?
  salary_range            String?
  university              String?
  degree                  String?
  educationStatus         String?
  skills                  String?
  job                     Job[]
  application             Application[]
}

model Employer {
  id             Int     @id @default(autoincrement())
  name           String
  user           User    @relation(fields: [userId], references: [id])
  userId         Int     @unique
  address        String?
  industry       String?
  aboutCompany   String?
  contactDetails String?
  job           Job[]
}

model Admin {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String?
  password String
}

model Job {
  id                  Int           @id @default(autoincrement())
  title               String
  category            String
  description         String
  createdAt           DateTime @default(now())
  employer            Employer      @relation(fields: [employerId], references: [id])
  employerId          Int
  applicationDeadline DateTime
  duration            String?
  requirement         String
  type                String
  jobType             String
  salary              String?
  experience          String?
  jobSeeker           Job_Seeker[]
  application         Application[]
}


model Application {
  id                Int     @id @default(autoincrement())
  jobSeekerId       Int
  jobId             Int
  status            String
  jobSeeker         Job_Seeker @relation(fields: [jobSeekerId], references: [id])
  job               Job    @relation(fields: [jobId], references: [id])
}

enum Role {
  JOBSEEKER
  EMPLOYER
}
